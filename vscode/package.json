{
  "name": "pixcil",
  "displayName": "Pixcil",
  "publisher": "sile",
  "license": "MIT",
  "description": "Pixel art editor & PNG file viewer",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pixel art editor",
    "png viewer"
  ],
  "browser": "./dist/web/extension.js",
  "bugs": {
    "url": "https://github.com/sile/pixcil/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sile/pixcil.git"
  },
  "homepage": "https://github.com/sile/pixcil/blob/main/README.md",
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#fafcfc",
    "theme": "light"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/sile"
  },
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "pixcil.png",
        "displayName": "Pixcil",
        "selector": [
          {
            "filenamePattern": "*.png"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/vscode": "^1.74.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-web": "^0.0.33",
    "assert": "^2.0.0",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
